#include <iostream>

using namespace std;

void powitanie()
{
	cout << "Witaj";
	cout << "\n\n";

}

void dodawanie()
{
	int a, b;
	cout << "Podaj a"<<endl;
	cin >> a;
	cout << "\n\n";
	cout << "podaj b"<<endl;
	cin >> b;
	cout << "\n\n";
	int wynik;
	
	wynik = a + b;
	cout << wynik;
}

int main()
{
	powitanie();
	dodawanie();
}
